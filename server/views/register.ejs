<% include partials/header.ejs %>
<% include partials/navbar.ejs %>	
	<!-- Render the Registration form  -->
	<main class="container">
	
		<div class="row">
            <div class="col-md-offset-3 col-md-6">
                <br/>
                <!-- Display flash messages  -->
	<% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
      <% } %>
                <h1>User Registration</h1>
                <form method="post" class="form-horizontal">
               <div class="form-group">
                <label for="username"  class="col-sm-3 control-label">Username: *</label>
                <div class="col-sm-9">
                   
                    <input name="username" class="form-control" required  placeholder="User Name" autofocus/>
                </div>
               </div>
                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">Password: *</label>
                    <div class="col-sm-9">
                   
                    <input type = "password" name="password" class="form-control" required placeholder="Password" />
                </div>
                   
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-3 control-label">Email: *</label>
                    <div class="col-sm-9">
                   
                    <input name="email" class="form-control" required  placeholder="Email"/>
                </div>
                  
                </div>
                <div class="form-group">
                    <label for="displayName" class="col-sm-3 control-label">Display Name: *</label>
                    <div class="col-sm-9">
                   
                    <input name="displayName" class="form-control" required placeholder="Display Name" />
                </div>
                    
                </div>
                    <div class="form-group text-right row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="submit" class="btn btn-success" value="Submit"/></td>
                    </div>
                    <div class="col-md-4">
                        <a href="/">
                            <input type="button" class="btn btn-warning" value="Cancel"/>
                        </a>
                    </div>
                    </div>
                   
                </form>
            </div> 
        </div>
	</main>
