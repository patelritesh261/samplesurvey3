<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            
             <font color="green"><b><i><h2>Edit Survey</h2></b></i></font>
           <form method="post" class="form-horizontal">
               <div class="form-group">
               
                <div class="col-sm-9">
                   
                    <input name="displayName"  type="hidden" class="form-control" required  placeholder="DiaplayName" value="<%= displayName %>"/>
                </div>
                </div>
                <div class="form-group">
               
                <div class="col-sm-9">
                   
                    <input name="surveyname"  type="hidden" class="form-control" required  placeholder="Survey Type" value="<%= agree.surveyName %>"/>
                </div>
                </div>
               <div class="form-group">
                <label for="question"  class="col-sm-3 control-label">Question: *</label>
                <div class="col-sm-9">
                   
                    <input name="question" class="form-control" placeholder="Question" required value="<%= agree.question %>" />
                </div>
               </div>
                <div class="form-group">
                    <label for="option1" class="col-sm-3 control-label">Option 1: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option1" class="form-control" placeholder="Option 1" required value="<%= agree.option1 %>" />
                </div>
                   
                </div>
                 <div class="form-group">
                    <label for="option2" class="col-sm-3 control-label">Option 2: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option2" class="form-control" placeholder="Option 2" required value="<%= agree.option2 %>" />
                </div>
                   
                </div>
                 
                
                <div class="form-group text-right">
                     <div class="col-md-4 col-md-offset-5">
                    <button type="submit" class="btn btn-success">Submit</button>
                    
                     </div>
                     <div class="col-md-3">
                    <a href="/multiple/agreeadd">
                        <input type="button" class="btn btn-warning" value="Cancel"/>
                    </a>
                </div>
                </div>
                    
                </div>
                
            </form>
        </div>
    </div>

</main>
<% include ../partials/footer.ejs %>