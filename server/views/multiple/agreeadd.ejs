<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            
            
             <font color="green"><b><i><h2>Create Survey</h2></b></i></font>
            <form method="post" class="form-horizontal">
                <div class="form-group">
                
                <div class="col-sm-9">
                   
                    <input name="displayName" type="hidden" class="form-control" required  placeholder="DiaplayName" value="<%= displayName %>"/>
                </div>
                </div>
                <div class="form-group">
               
                <div class="col-sm-9">
                   
                    <input name="surveyname"  type="hidden" class="form-control" required  placeholder="Survey Type" value="<%= surveyname %>"/>
                </div>
                </div>
               <div class="form-group">
                <label for="question"  class="col-sm-3 control-label">Question : *</label>
                <div class="col-sm-9">
                   
                    <input name="question" class="form-control" required  placeholder="Question" autofocus/>
                </div>
               </div>
                
                <div class="form-group text-right">
                    <div class="col-md-4 col-md-offset-5">
                    <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                     <div class="col-md-3 ">
                    <a href="/users">
                    <input type="button" class="btn btn-warning" value="Cancel"/>
                    </a>
                     </div>
                </div>
            </form>
        </div>
    </div>
  <div class="row">
     <table class="table table-inverse">
   <% for (var i = 0; i < agree.length; i++) {
    if(agree[i].displayName == displayName  )
        {
        if(agree[i].surveyName==surveyname){
    %>
  <tbody>
    <tr>
     
      <th colspan="3"><%= agree[i].question %></th>
      <th>
          <div class="col-md-2 col-md-offset-7">
           <a  href="/multiple/agreeadd/<%= agree[i]._id %>" title="Delete" >
                        <button type="button" class="btn btn-success">Edit</button>
                    </a>
          </div>
          <div class="col-md-2">
          <a href="/multiple/agreedelete/<%= agree[i]._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                        <button type="button" class="btn btn-danger">Delete</button>
                    </a>
          </div>
      </th>
    </tr>
   <tr>
      <td width="5%">A</td>
      <td width="45%"><%= agree[i].option1 %></td>
      <td  width="5%">B</td>
      <td width="45%"><%= agree[i].option2 %></td>
      
    </tr>
   
    
  </tbody>
   <% }} }  %>
     </table>
</div>
</main>
<% include ../partials/footer.ejs %>