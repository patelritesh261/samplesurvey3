<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1>Edit Survey</h1>
           <form method="post" class="form-horizontal">
               <div class="form-group">
                <label for="question"  class="col-sm-3 control-label">DiaplayName : *</label>
                <div class="col-sm-9">
                   
                    <input name="displayName" class="form-control" required  placeholder="DiaplayName" value="<%= displayName %>"/>
                </div>
               <div class="form-group">
                <label for="question"  class="col-sm-3 control-label">Question: *</label>
                <div class="col-sm-9">
                   
                    <input name="question" class="form-control" placeholder="Question" required value="<%= mcq.question %>" />
                </div>
               </div>
                <div class="form-group">
                    <label for="option1" class="col-sm-3 control-label">Option 1: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option1" class="form-control" placeholder="Option 1" required value="<%= mcq.option1 %>" />
                </div>
                   
                </div>
                 <div class="form-group">
                    <label for="option2" class="col-sm-3 control-label">Option 2: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option2" class="form-control" placeholder="Option 2" required value="<%= mcq.option2 %>" />
                </div>
                   
                </div>
                 <div class="form-group">
                    <label for="option3" class="col-sm-3 control-label">Option 3: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option3" class="form-control" placeholder="Option 3" required value="<%= mcq.option3 %>" />
                </div>
                   
                </div>
                 <div class="form-group">
                    <label for="option4" class="col-sm-3 control-label">Option 4: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option4" class="form-control" placeholder="Option 4" required value="<%= mcq.option4 %>" />
                </div>
                   
                </div>
                
                
                    
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a href="/multiple/delete/<%= mcq._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                        <button type="button" class="btn btn-danger">Delete</button>
                    </a>
                    <a href="/multiple">
                        <input type="button" class="btn btn-warning" value="Cancel"/>
                    </a>
                </div>
            </form>
        </div>
    </div>

</main>
<% include ../partials/footer.ejs %>