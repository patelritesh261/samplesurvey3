<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            
            
             <font color="green"><b><i><h2>Create Survey</h2></b></i></font>
            <form method="post" class="form-horizontal">
                <div class="form-group">
                
                <div class="col-sm-9">
                   
                    <input name="displayName" type="hidden" class="form-control" required  placeholder="DiaplayName" value="<%= displayName %>"/>
                </div>
                </div>
                <div class="form-group">
               
                <div class="col-sm-9">
                   
                    <input name="surveyname"  type="hidden" class="form-control" required  placeholder="Survey Type" value="<%= surveyname %>"/>
                </div>
                </div>
               <div class="form-group">
                <label for="question"  class="col-sm-3 control-label">Question : *</label>
                <div class="col-sm-9">
                   
                    <input name="question" class="form-control" required  placeholder="Question" autofocus/>
                </div>
               </div>
                <div class="form-group">
                    <label for="option1" class="col-sm-3 control-label">Option 1: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option1" type="text" class="form-control" required placeholder="Option 1" />
                </div>
                   
                </div>
                <div class="form-group">
                    <label for="option2" class="col-sm-3 control-label">Option 2: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option2" type="text" class="form-control" required placeholder="Option 2" />
                </div>
                   
                </div>
                <div class="form-group">
                    <label for="option3" class="col-sm-3 control-label">Option 3: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option3" type="text" class="form-control" required placeholder="Option 3" />
                </div>
                   
                </div>
                <div class="form-group">
                    <label for="option4" class="col-sm-3 control-label">Option 4: *</label>
                    <div class="col-sm-9">
                   
                    <input name="option4" type="text" class="form-control" required placeholder="Option 4" />
                </div>
                   
                </div>
                
                <div class="form-group text-right">
                    <div class="col-md-4 col-md-offset-5">
                    <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                     <div class="col-md-3 ">
                    <a href="/users">
                    <input type="button" class="btn btn-warning" value="Cancel"/>
                    </a>
                     </div>
                </div>
            </form>
        </div>
    </div>
  <div class="row">
     <table class="table table-inverse">
   <% for (var i = 0; i < mcq.length; i++) { %>
  <tbody>
    <tr>
     
      <td colspan="7"><%= mcq[i].question %></td>
      <td>
          <div class="col-md-5 ">
           <a  href="/multiple/add/<%= mcq[i]._id %>" title="Delete" >
                        <button type="button" class="btn btn-success">Edit</button>
                    </a>
          </div>
          <div class="col-md-4">
          <a href="/multiple/delete/<%= mcq[i]._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                        <button type="button" class="btn btn-danger">Delete</button>
                    </a>
          </div>
      </td>
    </tr>
    <tr>
      <td width="5%">A</td>
      <td width="20%"><%= mcq[i].option1 %></td>
      <td  width="5%">B</td>
      <td width="20%"><%= mcq[i].option2 %></td>
      <td width="5%">C</td>
      <td width="20%"><%= mcq[i].option3 %></td>
      <td  width="5%">D</td>
      <td width="20%"><%= mcq[i].option4 %></td>
    </tr>
   
    
  </tbody>
   <% } %>
     </table>
</div>
</main>
<% include ../partials/footer.ejs %>