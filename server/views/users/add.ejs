<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
             <br/>
                <!-- Display flash messages  -->
	<% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
      <% } %>
            
            <font color="green"><b><i><h2>Add a new User</h2></b></i></font>
            <form method="post" class="form-horizontal">
               <div class="form-group">
                <label for="username"  class="col-sm-3 control-label">Username: *</label>
                <div class="col-sm-9">
                   
                    <input name="username" class="form-control" required  placeholder="User Name" autofocus/>
                </div>
               </div>
                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">Password: *</label>
                    <div class="col-sm-9">
                   
                    <input name="password" type="password" class="form-control" required placeholder="Password" />
                </div>
                   
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-3 control-label">Email: *</label>
                    <div class="col-sm-9">
                   
                    <input name="email" type="email" class="form-control" required  placeholder="Email"/>
                </div>
                  
                </div>
                <div class="form-group">
                    <label for="displayName" class="col-sm-3 control-label">Display Name: *</label>
                    <div class="col-sm-9">
                   
                    <input name="displayName" class="form-control" required placeholder="Display Name" />
                </div>
                    
                </div>
                <div class="form-group text-right row">
                <div class="col-md-4 col-md-offset-5">
                    <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                    <div class="col-md-3 ">
                    <a href="/users">
                    <input type="button" class="btn btn-warning" value="Cancel"/>
                    </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</main>
<% include ../partials/footer.ejs %>