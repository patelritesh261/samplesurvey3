<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <h1></h1>
<font color="green"><b><i><h2>Users</h2></b></i></font>
    
<font color="green"><b><i><p><a href="/users/add">Add a New User</a></p></b></i></font>
    <ul class="list-group">
        <% for (var i = 0; i < users.length; i++) { 
        if(users[i].displayName == displayName)
        {
        %>
            <li class="list-group-item">
                username: 
                <a href="/users/<%= users[i]._id %>" title="Edit User">
                    <%= users[i].username %>
                </a>
                <br />
                password: <%= users[i].password %>
                <br />
                email: <%= users[i].email %>
                <br />
                Display Name: <%= users[i].displayName %>
                <br />
                Created: <%= users[i].created.toDateString() %>
                <br />
                Updated: <%= users[i].updated.toDateString() %>
            </li>
        <% } }%>
    </ul>
    <ul class="list-group">
        <% for (var i = 0; i < mcq.length; i++) { 
       
        %>
            <li class="list-group-item">
                username: 
                <a href="/users/<%= users[i]._id %>" title="Edit User">
                    <%= mcq[i] %>
                </a>
                
            </li>
        <%  }%>
    </ul>
</main>
